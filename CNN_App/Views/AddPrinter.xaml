<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CNN_App.Views.AddPrinter">
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            <Label Text="Printer Name"></Label>
            <Entry x:Name="txtPname" Placeholder="Printer name"></Entry>

            <Label Text="Printer Brand"></Label>
            <Entry x:Name="txtPbrand" Placeholder="Printer brand "></Entry>

            <Label Text="Printer Type"></Label>
            <Entry x:Name="txtPtype" Placeholder="Printer type "></Entry>

            <Label Text="Printer Price"></Label>
            <Entry x:Name="txtPrice" Placeholder="Printer price "></Entry>

            <Label Text="Printer Detail"></Label>
            <Entry x:Name="txtPdetail" Placeholder="Printer detail "></Entry>

            <Label Text="Image URL"></Label>
            <Entry x:Name="txtURL" Placeholder="example.png"></Entry>

            <Button
                VerticalOptions="Center"
                Text="Create Product" TextColor="Black"
                BackgroundColor="Transparent" BorderColor="black"
                BorderWidth="1.5" CornerRadius="20"
                Clicked="Button_Clicked">
            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

