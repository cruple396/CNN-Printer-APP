<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CNN_App.Views.RegPage"
    Shell.FlyoutBehavior="Disabled">
    <ContentPage.Content>
        <StackLayout Padding="40"
                     VerticalOptions="Start" HorizontalOptions="FillAndExpand">
            <Image Source="CNN"
                   WidthRequest="250" HeightRequest="250">
            </Image>

            

            <Entry  Placeholder="Email" x:Name="emailEntry"
                   TextColor="Black"
                   PlaceholderColor="Gray"/>
            

            <Entry  Placeholder="UserName" x:Name="userNameEntry"
                   TextColor="Black"
                   PlaceholderColor="Gray">
            </Entry>

            <Entry  Placeholder="Password" x:Name="passwordEntry"
                   IsPassword="True"
                   TextColor="Black" PlaceholderColor="Gray">

            </Entry>

            <Button
                VerticalOptions="Center"
                Text="Register" TextColor="Black"
                BackgroundColor="Transparent" BorderColor="black"
                BorderWidth="1.5" CornerRadius="20"
                Clicked="Handle_Clicked">
            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>